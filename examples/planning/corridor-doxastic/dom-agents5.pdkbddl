
(define (domain corridor)
    (:agents a b c d e)
    (:types loc)
    (:constants l1 l2 l3 l4 - loc)
    (:predicates
            (secret)
        {AK}(at ?l - loc)
        {AK}(succ ?l1 ?l2 - loc)
    )

    (:action right
        :derive-condition   always
        :parameters         (?l1 ?l2 - loc)
        :precondition       (and (succ ?l1 ?l2) (at ?l1))
        :effect             (and (!at ?l1) (at ?l2))
    )

    (:action left
        :derive-condition   always
        :parameters         (?l1 ?l2 - loc)
        :precondition       (and (succ ?l1 ?l2) (at ?l2))
        :effect             (and (at ?l1) (!at ?l2))
    )

    (:action sense
        :derive-condition   always
        :precondition       (and (at l2))
        :effect             (and [a](secret))
    )

    (:action shout-1
        :derive-condition   always
        :precondition       (and (at l1) [a](secret))
        :effect             (and [b](secret) [d](secret))
    )

    (:action shout-2
        :derive-condition   always
        :precondition       (and (at l2) [a](secret))
        :effect             (and [b](secret) [c](secret) [d](secret) [e](secret))
    )

    (:action shout-3
        :derive-condition   always
        :precondition       (and (at l3) [a](secret))
        :effect             (and [b](secret) [c](secret) [e](secret))
    )

    (:action shout-4
        :derive-condition   always
        :precondition       (and (at l4) [a](secret))
        :effect             (and [c](secret) [e](secret))
    )

    (:action fib-1
        :derive-condition   always
        :precondition       (and (at l1) [a](secret))
        :effect             (and [b](!secret) [d](!secret))
    )

    (:action fib-2
        :derive-condition   always
        :precondition       (and (at l2) [a](secret))
        :effect             (and [b](!secret) [c](!secret) [d](!secret) [e](!secret))
    )

    (:action fib-3
        :derive-condition   always
        :precondition       (and (at l3) [a](secret))
        :effect             (and [b](!secret) [c](!secret) [e](!secret))
    )

    (:action fib-4
        :derive-condition   always
        :precondition       (and (at l4) [a](secret))
        :effect             (and [c](!secret) [e](!secret))
    )
)
